@startuml
left to right direction
skinparam packageStyle rectangle
skinparam usecase {
  BackgroundColor White
  BorderColor Black
}

actor "User" as User

rectangle "SpaceMiner" as SpaceMiner {
  usecase "Initialize Application" as UC_Init
  usecase "Select XES Log Files" as UC_Select
  usecase "Discover Process DFG (per file)" as UC_DFG
  usecase "Filter by Resource" as UC_FilterRes
  usecase "View Resource-specific DFG" as UC_ResDFG
  usecase "Filter by Case" as UC_FilterCase
  usecase "View 3D Scatter (per file)" as UC_3D
  usecase "View 2D Scatter for Activity" as UC_2D
  usecase "Discover All (merge logs)" as UC_All
  usecase "Discover All Performance (merge logs)" as UC_AllPerf
  usecase "View 3D Scatter (All logs)" as UC_3DAll
  usecase "Convert CSV to XES" as UC_CSV2XES
}

User --> UC_Init
User --> UC_Select
User --> UC_DFG
User --> UC_FilterRes
User --> UC_ResDFG
User --> UC_FilterCase
User --> UC_3D
User --> UC_2D
User --> UC_All
User --> UC_AllPerf
User --> UC_3DAll
User --> UC_CSV2XES

' Implementation-sequence relationships
UC_DFG ..> UC_Select : <<include>>
UC_ResDFG ..> UC_FilterRes : <<include>>
UC_All ..> UC_Select : <<include>>
UC_AllPerf ..> UC_Select : <<include>>
UC_3D ..> UC_FilterCase : <<extend>>
UC_3DAll ..> UC_All : <<include>>

@enduml